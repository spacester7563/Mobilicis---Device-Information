<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/shape"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:rotation="90"
        android:src="@drawable/shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="24dp"
        android:padding="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/primary"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#fff" />

    <TextView
        android:id="@+id/title"
        android:layout_marginLeft="24dp"
        android:text="Live Sensor"
        android:textSize="35sp"
        android:fontFamily="@font/black"
        android:textColor="#605f69"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_height="0dp">


        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/Gyroscope"
                    android:layout_marginLeft="12dp"
                    android:textSize="18sp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/bold"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/Barometer"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/bold"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/Accelerometer"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/bold"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/RotationVector"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/bold"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/Proximity"
                    android:layout_marginLeft="12dp"
                    android:textSize="18sp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/bold"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/AmbientLight"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/bold"
                    android:textColor="#313131"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>